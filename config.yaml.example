# Oracle SBC Certificate Renewal Configuration

# SBC Connection Settings
sbc:
  host: "10.0.0.2"              # SBC IP address or hostname
  port: 443                      # REST API port (default: 443)
  username: "admin"              # SBC admin username
  password: "password"           # SBC admin password
  insecure: true                 # Skip TLS certificate verification (for self-signed certs)

# Certificate Settings
certificate:
  # Fields used by Oracle SBC certificate-record:
  name: "new-restless"           # Name of the certificate record
  country: "US"                  # Country code (2 letters)
  state: "MA"                     # State or Province
  organization: "Engineering"     # Organization name
  common_name: "sbc.example.com" # Common Name (CN) - usually the FQDN
  alternate_name: ""             # Subject Alternative Name (SAN) - additional hostname/IP (default: empty)
  key_size: 4096                 # RSA key size in bits (default: 4096)
  key_algorithm: "rsa"           # Key algorithm: rsa (default: rsa)

  # Optional: Paths for certificate files
  cert_path: ""                  # Path to signed certificate (leave empty to only generate CSR)
  csr_path: "./sbc.csr"          # Path where CSR will be saved

# TLS Profile Settings (Optional)
# These settings control automatic TLS profile updates after certificate import
tls_profile:
  enabled: false                 # Enable TLS profile management
  profile_name: "defaultTlsProfile" # Name of the TLS profile to update (default: defaultTlsProfile)
  update_after_import: true      # Automatically update TLS profile after certificate import
  delete_old_certificate: false  # Delete the old certificate record after update
  old_certificate_name: ""       # Name of the old certificate to delete (e.g., "defaultSelfSignedRestCert")
  trusted-ca-certificates: "R10,R11" # Comma separated list of allowed intermediate CA certificate CNs (optional)
